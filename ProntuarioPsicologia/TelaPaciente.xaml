<Window x:Class="ProntuarioPsicologia.TelaPaciente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProntuarioPsicologia"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TelaPaciente" Height="475" Width="900" ResizeMode="NoResize" Loaded="Window_Loaded_1">
    <Grid Margin="0,0,-13,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="413*"/>
            <ColumnDefinition Width="302*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnAdicionar" Content="Novo Registro" Margin="87,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="132" Click="btnAdicionar_Click" Grid.Column="1"/>
        <TextBox x:Name="txtCPF" HorizontalAlignment="Left" Margin="12,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152" IsEnabled="False"/>
        <TextBox x:Name="txtPsicologo" HorizontalAlignment="Left" Margin="262,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152" IsEnabled="False" Grid.ColumnSpan="2"/>
        <Label x:Name="lblCPF" Content="CPF:" HorizontalAlignment="Left" Margin="12,13,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPsi"  Content="Psicologo:" HorizontalAlignment="Left" Margin="262,13,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="12,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="402" Grid.ColumnSpan="2"/>
        <Label x:Name="lblNome" Content="Nome Completo:" HorizontalAlignment="Left" Margin="12,75,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DTANasc" Margin="12,160,0,0" VerticalAlignment="Top" Width="180" IsEnabled="False"/>
        <Label x:Name="lblNasc" Content="Data de nascimento:" HorizontalAlignment="Left" Margin="12,141,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelefone" HorizontalAlignment="Left" Margin="234,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2"/>
        <Label x:Name="lblTelefone" Content="Telefone:" HorizontalAlignment="Left" Margin="234,141,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Margin="12,229,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152"/>
        <Label x:Name="lblValor" Content="Valor:" HorizontalAlignment="Left" Margin="12,209,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbNota" Content="Com nota?" Margin="175,228,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtNomeResponsavel" HorizontalAlignment="Left" Margin="24,296,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="356"/>
        <Label x:Name="lblNomeResponsavel" Content="Nome Completo do Responsavel:*" HorizontalAlignment="Left" Margin="24,275,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelefoneResponsavel" HorizontalAlignment="Left" Margin="395,294,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162" Grid.ColumnSpan="2"/>
        <Label x:Name="lblTelefoneResponsavel" Content="Telefone do Responsavel:*" HorizontalAlignment="Left" Margin="395,275,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="161"/>
        <Button x:Name="btnAtualizar" Content="Atualizar" Margin="233,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="181" Grid.ColumnSpan="2" Click="btnAtualizar_Click"/>
        <Button x:Name="btnExcluir" Content="Excluir" Margin="12,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="181" Foreground="Black" Click="btnExcluir_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFD72626"/>
            </Button.Background>
            <Button.BorderBrush>
                <SolidColorBrush/>
            </Button.BorderBrush>
        </Button>
        <CheckBox x:Name="ckbPago" Content="Pago" Margin="291,228,0,0" VerticalAlignment="Top" />
        <ListView x:Name="lstProntuario" Margin="66,96,36,40" Grid.Column="1" BorderBrush="Black" OpacityMask="Black" BorderThickness="1,1,1,1" SelectionChanged="lstProntuario_SelectionChanged_1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding idRegistro}"/>
                    <GridViewColumn Header="Data de Registro" DisplayMemberBinding="{Binding dataPaciente}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Rectangle x:Name="RetOpcional" HorizontalAlignment="Left" Height="75" Margin="14,267,0,0" Stroke="Black" VerticalAlignment="Top" Width="559" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
