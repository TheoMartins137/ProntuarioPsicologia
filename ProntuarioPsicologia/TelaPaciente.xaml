<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProntuarioPsicologia"
        xmlns:ui="http://schemas.modernwpf.com/2019" x:Class="ProntuarioPsicologia.TelaPaciente"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TelaPaciente" Height="440" Width="900" ResizeMode="NoResize" Loaded="Window_Loaded_1">
    <Grid x:Name="Grid" Margin="0,0,-1,0">
        <TextBox x:Name="txtCPF" HorizontalAlignment="Left" Margin="12,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152" IsEnabled="False" Height="32"/>
        <TextBox x:Name="txtPsicologo" HorizontalAlignment="Left" Margin="262,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152" IsEnabled="False" Height="32"/>
        <Label x:Name="lblCPF" Content="CPF:" HorizontalAlignment="Left" Margin="12,13,0,0" VerticalAlignment="Top" Height="19" Width="26"/>
        <Label x:Name="lblPsi"  Content="Psicologo:" HorizontalAlignment="Left" Margin="262,13,0,0" VerticalAlignment="Top" Height="19" Width="62"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="12,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="402" Height="32"/>
        <Label x:Name="lblNome" Content="Nome Completo:" HorizontalAlignment="Left" Margin="12,75,0,0" VerticalAlignment="Top" Height="19" Width="106"/>
        <DatePicker x:Name="DTANasc" Margin="12,160,0,0" VerticalAlignment="Top" Width="180" IsEnabled="False" Height="32"/>
        <Label x:Name="lblNasc" Content="Data de nascimento:" HorizontalAlignment="Left" Margin="12,141,0,0" VerticalAlignment="Top" Height="19" Width="126"/>
        <TextBox x:Name="txtTelefone" HorizontalAlignment="Left" Margin="234,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Height="32"/>
        <Label x:Name="lblTelefone" Content="Telefone:" HorizontalAlignment="Left" Margin="234,141,0,0" VerticalAlignment="Top" Height="19" Width="55"/>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Margin="12,229,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152" Height="32"/>
        <Label x:Name="lblValor" Content="Valor:" HorizontalAlignment="Left" Margin="12,209,0,0" VerticalAlignment="Top" Height="19" Width="34"/>
        <CheckBox x:Name="ckbNota" Content="Com nota?" Margin="175,228,0,0" VerticalAlignment="Top" Height="32" Width="120" />
        <TextBox x:Name="txtNomeResponsavel" HorizontalAlignment="Left" Margin="23,309,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="356" Height="32"/>
        <Label x:Name="lblNomeResponsavel" Content="Nome Completo do Responsavel:*" HorizontalAlignment="Left" Margin="23,288,0,0" VerticalAlignment="Top" Height="19" Width="212"/>
        <TextBox x:Name="txtTelefoneResponsavel" HorizontalAlignment="Left" Margin="394,307,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162" Height="32"/>
        <Label x:Name="lblTelefoneResponsavel" Content="Telefone do Responsavel:*" HorizontalAlignment="Left" Margin="394,288,0,0" VerticalAlignment="Top" Width="161" Height="19"/>
        <Button x:Name="btnAtualizar" Content="Atualizar" Margin="392,360,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="181" Click="btnAtualizar_Click" Height="32"/>
        <Button x:Name="btnExcluir" Content="Excluir" Margin="14,358,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="181" Foreground="Black" Click="btnExcluir_Click" Height="32" Background="#FFD72626" BorderBrush="#00000000"/>
        <Rectangle x:Name="RetOpcional" HorizontalAlignment="Left" Height="75" Margin="12,274,0,0" Stroke="Black" VerticalAlignment="Top" Width="581"/>
        <TextBox x:Name="txtObservacoes" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="424,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="253" Height="225" AcceptsReturn="True"/>
        <Label x:Name="lblDescricao" Content="Observações:" HorizontalAlignment="Left" Margin="424,13,0,0" VerticalAlignment="Top" Height="19" Width="82"/>
        <ComboBox x:Name="cbxPagamento" Margin="280,229,0,0" Width="134" IsEditable="False" Height="32" >
            <ComboBoxItem Content="Por Sessão" />
            <ComboBoxItem Content="Semanal" />
            <ComboBoxItem Content="Mensal" />
        </ComboBox>
        <Button x:Name="btnAdicionar" Content="Novo Registro" Margin="693,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="174" Click="btnAdicionar_Click" Height="35"/>
        <ListView x:Name="lstProntuario" BorderBrush="Black" OpacityMask="Black" BorderThickness="1,1,1,1" SelectionChanged="lstProntuario_SelectionChanged_1" IsSynchronizedWithCurrentItem="True" Margin="694,57,19,14">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding idRegistro}"/>
                    <GridViewColumn Header="Data de Registro" DisplayMemberBinding="{Binding dataPaciente}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnPagamento" Content="Button" Margin="219,360,0,0" VerticalAlignment="Top" Width="154" Click="btnPagamento_Click"/>

    </Grid>
</Window>
