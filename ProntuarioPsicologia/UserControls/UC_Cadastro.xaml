<UserControl x:Class="ProntuarioPsicologia.UserControls.UC_Cadastro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProntuarioPsicologia.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Button x:Name="btnConfirmar" Content="Confirmar" Margin="346,44,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click"/>
        <TextBox x:Name="txtCPF" HorizontalAlignment="Left" Margin="185,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152"/>
        <ComboBox x:Name="cbxPsi" Margin="435,44,0,0" Width="152" IsEditable="False" VerticalAlignment="Top" HorizontalAlignment="Left" SelectionChanged="cbxPsi_SelectionChanged">
            <ComboBoxItem Content="Alice Martins"/>
            <ComboBoxItem Content="Igor Ferreira"/>
        </ComboBox>
        <Label x:Name="lblCPF" Content="CPF:" HorizontalAlignment="Left" Margin="185,22,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPsi"  Content="Selecione o Psicologo:" HorizontalAlignment="Left" Margin="435,22,0,0" VerticalAlignment="Top"/>
        <Label Content="-----------------------------------------------------------------------------" HorizontalAlignment="Left" Margin="-34,204,0,0" VerticalAlignment="Top" Width="432" Height="18" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.953"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="-----------------------------------------------------------------------------" HorizontalAlignment="Left" Margin="370,207,0,0" VerticalAlignment="Top" Width="432" Height="18" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.953"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="185,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="402"/>
        <Label x:Name="lblNome" Content="Nome Completo:" HorizontalAlignment="Left" Margin="185,84,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DTANasc" Margin="185,169,0,0" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="lblNasc" Content="Data de nascimento:" HorizontalAlignment="Left" Margin="185,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelefone" HorizontalAlignment="Left" Margin="407,169,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="lblTelefone" Content="Telefone:" HorizontalAlignment="Left" Margin="407,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Margin="185,238,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152"/>
        <Label x:Name="lblValor" Content="Valor:" HorizontalAlignment="Left" Margin="185,218,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbNota" Content="Com nota?" Margin="348,237,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtNomeResponsavel" HorizontalAlignment="Left" Margin="185,299,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="402"/>
        <Label x:Name="lblNomeResponsavel" Content="Nome Completo do Responsavel:*" HorizontalAlignment="Left" Margin="185,278,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelefoneResponsavel" HorizontalAlignment="Left" Margin="185,355,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="lblTelefoneResponsavel" Content="Telefone do Responsavel:*" HorizontalAlignment="Left" Margin="185,336,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTelefoneConfianca" HorizontalAlignment="Left" Margin="407,355,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="lblTelefoneConfianca" Content="Telefone de Confiança:*" HorizontalAlignment="Left" Margin="407,336,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCadastrar" Content="Cadastrar" Margin="406,398,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.128,0.063" Width="181" Click="btnCadastrar_Click"/>

    </Grid>
</UserControl>
